<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.org/schema/seam/pages"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://jboss.org/schema/seam/pages http://jboss.org/schema/seam/pages-2.3.xsd"
      no-conversation-view-id="/TekohaList.xhtml"
      login-required="true">

   <begin-conversation join="true" flush-mode="MANUAL"/>

   <action execute="#{tekohaHome.wire}"/>

   <param name="tekohaFrom"/>
   <param name="tekohaId" value="#{tekohaHome.tekohaId}"/>


   <navigation from-action="#{tekohaHome.persist}">
      <rule if-outcome="persisted">
         <end-conversation/>
         <redirect view-id="/Tekoha.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{tekohaHome.update}">
      <rule if-outcome="updated">
         <end-conversation/>
         <redirect view-id="/Tekoha.xhtml"/>
      </rule>
   </navigation>

   <navigation from-action="#{tekohaHome.remove}">
      <rule if-outcome="removed">
         <end-conversation/>
         <redirect view-id="/TekohaList.xhtml"/>
      </rule>
   </navigation>

</page>
